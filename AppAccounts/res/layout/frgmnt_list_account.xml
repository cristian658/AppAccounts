<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpure"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="7dp"
            android:text="Listado de Cuentas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="338dp"
        android:layout_weight="0.87"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_weight="0.79" >
        </ListView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/listMonto"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/listMonto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/saldoText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/saldo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="$300000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/listMonto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gastadoText"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Gastado"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gastado"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="$38358"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>