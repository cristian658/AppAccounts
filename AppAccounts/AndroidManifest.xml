<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.ciisa.appaccounts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/android:Theme.Holo" >
        <activity
            android:name="cl.ciisa.appaccounts.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cl.ciisa.appaccounts.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.ciisa.appaccounts.ListAccountActivity"
            android:label="@string/title_activity_list_account" android:theme="@style/ListAccountContainer">
        </activity>
    </application>

</manifest>
